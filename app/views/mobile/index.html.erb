<script>
	$(function(){
		screen_height = document.body.clientHeight
		post_message_height = $("#post_message").height()
		chat_heading_height = $("#chat_heading").height()
		height = screen_height - post_message_height - 10 - chat_heading_height
		$("#message_div").css("height", height)
		$("#post_message").css("top", height)
	})
</script>
