<div class="modal-shiftfix">
	<div class="container-fluid main-content">
		<div class="page-title">
			<h1>
				Chat
			</h1>
		</div>
		<div class="row">
			<!-- Conversation -->
			<div class="col-lg-12">
				<div class="widget-container scrollable chat chat-page">
					<div class="contact-list">
						<div class="heading">
							Contacts (15)<i class="icon-plus pull-right"></i>
						</div>
						<ul>
							<%@users.each do |user|%>
								<li>
								<a href="/chat.html#"><img width="30" height="30" src="/player/<%=user.filename%>.png"><%=user.name%><i class="icon-circle text-danger"></i></a>
								</li>
							<%end%>
						</ul>
					</div>
					<div class="heading">
						<i class="icon-comments"></i>Chat with <a href="/chat.html#">John Smith</a><i class="icon-cog pull-right"></i><i class="icon-smile pull-right"></i>
					</div>
					<%=render :partial => 'layouts/common_view', :locals => {:mode => 'web'}%>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	<%=render :partial => 'layouts/common_function', :locals => {:mode => 'web'}%>
</script>
